html
  font-size 16px
body
  font 1.3rem main-font
  color #333
  line-height 1.4
  text-align justify
  position relative

*
  outline none


h1
  margin-top 0
  font-weight normal

h2
  font-weight normal

h3
  font-weight normal
  font-style italic
  margin-top 3rem

p
  margin-top 0
  -webkit-hypens auto
  -moz-hypens auto
  hyphens auto

ul
  list-style square
  padding-left 1.2rem

ol
  padding-left 1.2rem

blockquote
  margin-left 1rem
  padding-left 1rem
  border-left 1px solid #ddd

pre
  position relative
  max-width 100%
  overflow scroll
  border 1px solid #f0f0f0
  border-radius: 3px
  padding: 0.5rem
  background white
  code
    position relative
    max-width 100%
    overflow-x scroll
    overflow-y visible
    font-family code-font
    font-size .9rem



a
  color #2484c1
  text-decoration none
  &:hover
    text-decoration underline
  img
    border none

h1 a, h1 a:hover
  color #333
  text-decoration none

hr
  color #ddd
  height 1px
  margin 2rem 0
  border-top solid 1px #ddd
  border-bottom none
  border-left 0
  border-right 0

p#heart
  font-size 2rem
  line-height 1
  text-align center
  color #ccc

.red
  color #B50000



.page
  margin 5rem auto 0 auto
  padding 0 1rem
  display flex
  flex-direction row

  .content
    flex 1

.NavigationBar
  font-size 1.2rem
  font-style italic
  border-bottom 1px solid #ddd
  padding 1rem 0
  background-color white
  position fixed
  top 0
  left 0
  right 0
  display flex
  align-items center
  justify-content center
  z-index 20
  ul
    padding 0
    margin 0
    display flex
    flex-direction row
    list-style none
    li
      padding 0 1rem
