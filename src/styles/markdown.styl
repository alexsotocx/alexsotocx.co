html, body
  padding 1rem
  margin auto
  max-width 42rem
  background #fefefe

body
  font-size: 16px
  font 1.3rem "Vollkorn", Palatino, Times
  color #333
  line-height 1.4
  text-align justify

header, nav, article, footer
  width 700px
  margin 0 auto

article
  margin-top 4rem
  margin-bottom 4rem
  min-height 400px

footer
  margin-bottom 50px

video
  margin 2rem 0
  border 1px solid #ddd

nav
  font-size .9rem
  font-style italic
  border-bottom 1px solid #ddd
  padding 1rem 0
  p
    margin 0

h1
  margin-top 0
  font-weight normal

h2
  font-weight normal

h3
  font-weight normal
  font-style italic
  margin-top 3rem

p
  margin-top 0
  -webkit-hypens auto
  -moz-hypens auto
  hyphens auto

ul
  list-style square
  padding-left 1.2rem

ol
  padding-left 1.2rem

blockquote
  margin-left 1rem
  padding-left 1rem
  border-left 1px solid #ddd

pre
  position relative
  max-width 100%
  overflow scroll
  border 1px solid #f0f0f0
  border-radius: 3px
  padding: 0.5rem
  background white
  code
    position relative
    max-width 100%
    overflow-x scroll
    overflow-y visible
    font-family "Consolas", "Menlo", "Monaco", monospace, serif
    font-size .9rem



a
  color #2484c1
  text-decoration none
  &:hover
    text-decoration underline
  img
    border none

h1 a, h1 a:hover
  color #333
  text-decoration none

hr
  color #ddd
  height 1px
  margin 2rem 0
  border-top solid 1px #ddd
  border-bottom none
  border-left 0
  border-right 0

p#heart
  font-size 2rem
  line-height 1
  text-align center
  color #ccc

.red
  color #B50000

body#index
  li
    margin-bottom 1rem

@media only screen and (max-device-width: 1024px)
  body
    font-size 120%
    line-height 1.4

@media only screen and (max-device-width: 480px)
  body
    text-align left
  article
    padding 0 10px

@media only screen and (max-device-width: 480px)
  article, footer
    width auto

