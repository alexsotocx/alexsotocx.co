.Entry
  width 100%
  .PostContent
    position relative
    max-width 100%
    overflow hidden
    border-top 1px #eee solid
    margin-top 1rem
.post
  position relative
  display flex
  border 1px solid #f0f0f0
  border-radius-mixin 3px
  padding 1rem
  margin-bottom 1rem
  flex-direction row

  .full-container-link
    position absolute
    top 0
    right 0
    left 0
    bottom 0
    z-index 10
  .image
    align-self center
  .details
    margin-left 1rem
    p, section
      margin 0
      padding-top 0.5rem
    .title
      font-size 1.5rem
      font-weight bold
    .tags
      .tag
        display inline-block
        margin-right 0.5rem
        color blue
        &:before
          display inline-block
          content '*'
    .author
      .name
        text-align left
  +mobile_bp()
    flex-direction column
    .details
      margin-left 0
      .title
        text-align center



